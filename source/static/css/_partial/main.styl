#container{
	position:relative;
	min-height:100%;
	#mobile-nav{
        height: 400px;
        position: relative;
        background-color: #342345;   
        background: no-repeat center center;
        background-color: gray;
        background-attachment: scroll;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        background-size: cover;
        -o-background-size: cover;
        margin-bottom: 0;   
        background-image: url(/static/img/home_bg.jpg);
		#header{
			padding-top: 100px;
            color: white;
			.profilepic{
				position: relative;
				z-index: 100;
			}
			.header-nav{      
               position: absolute;
               top: 0;
                width: 100%;
				height: 40px;
                line-height: 40px;
                padding: 10px;
                margin: 0;
                
                .brand {
                    position: absolute;
                    left: 20px;
                }
                .menu {
                    position: absolute;
                    right: 20px;
                }          
				ul{
					text-align: center;
					cursor: default;
				}
				li{
					display: inline-block;
					margin: 0 20px;
				}
                &.is-visible {
                    background: rgba(255,255,255,0.7);
                    .brand {
                        a {
                            color: #404040;
                        }
                    }
                    .menu {
                        a {
                            color: #404040;
                        }
                    }
                }            
			}
		}
	}
	.mid-col {
      max-width: 800px;
      margin: 0 auto;      
	}

	@media screen and (max-width:1040px) {
		
	}@media screen and (max-width:800px) {
		@import "_partial/mobile"
	}
}
.header-author{
	text-align: center;
	margin: 0.67em 0;
	font-family: Roboto, "Roboto", serif;
	font-size: 30px;
	transition: 0.3s;
}
#header{
	width:100%;
	padding-top: 140px;   
	a {
		color: #EEE;
		&:hover {
			color: #B0A0AA;
		}
	}
	.profilepic{
		text-align: center;
		border: 5px solid #fff;
		border-radius: 50%;
		width: 128px;
		height: 128px;
		position: absolute;
		top: 0;
		left: 50%;
		margin-left: -64px;
		background: #F6F6F6;
		display: -webkit-box;
		-webkit-box-orient: horizontal;
		-webkit-box-pack: center;
		-webkit-box-align: center;
		text-align: center;
		img{
			width: 100%;
			height: 100%;
			border-radius: 50%;
		}
	}
	.header-subtitle{
		text-align: center;
		color:#DDD;
		font-size: 14px;
		line-height: 25px;
		overflow: hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
	}
	.header-nav{
		font-weight: 300;
		line-height: 31px;
		cursor: pointer;
		text-transform: uppercase;
		float:none;
		margin-left: -12px;
		text-align: center;
		display: -webkit-box;
		-webkit-box-orient: horizontal;
		-webkit-box-pack: center;
		-webkit-box-align: center;
		li{
			cursor: default;
			a{
				min-width: 300px;
			}
		}
	}
	.switch-area{
		position: relative;
		width: 100%;
		overflow: hidden;
		min-height: 500px;
		font-size: 14px;
		.switch-wrap{
			transition: transform .3s ease-in;
			position: relative;
		}
	}
	.turn-left{
	    transform: translate(-100%, 0 );
	}
	.header-social{
		width: 100%;
		transition: transform .3s ease-in;
		.social {
			margin-right:15px;
			margin-top:10px;
			text-align: center;
			a {
				border-radius:50%;
				display:-moz-inline-stack;
				display:inline-block;
				vertical-align:middle;
				*vertical-align:auto;
				zoom:1;
				*display:inline;
				margin:0 8px 15px 8px;
				width:28px;
				height:28px;
				transition:0.3s;
				font-size: 18px;
    			line-height: 28px;
    			color: white;
				&:hover {
					opacity:1
				}
			}
			a:last-of-type {
				margin-right:0
			}
			a.weibo {
				background-color: #aaaaff;
				border:1px solid #aaaaff;
				&:hover {
					border:1px solid #aaaaff;
				}
			}
			a.rss {
				background-color: #ef7522;
				border:1px solid #ef7522;
				&:hover {
					border:1px solid #cf5d0f;
				}
			}
			a.github {
				background-color: #afb6ca;
				border:1px solid #afb6ca;
				&:hover {
					border:1px solid #909ab6;
				}
			}
			a.facebook {
				background-color: #3b5998;
				border:1px solid #3b5998;
				&:hover {
					border:1px solid #2d4373;
				}
			}
			a.google {
				background-color: #c83d20;
				border:1px solid #c83d20;
				&:hover {
					border:1px solid #9c3019;
				}
			}
			a.twitter {
				background-color: #55cff8;
				border:1px solid #55cff8;
				&:hover {
					border:1px solid #24c1f6;
				}
			}
			a.linkedin {
				background-color: #005a87;
				border:1px solid #005a87;
				&:hover {
					border:1px solid #006b98;
				}
			}
			a.mail {
				background-color: #005a87;
				border:1px solid #005a87;
				&:hover {
					border:1px solid #006b98;
				}
			}
		}
	}
	.switch-part{
		width: 100%;
		position: absolute;
	}
	.switch-part1{
		left: 0;
	}
	.switch-part2{
		left: 100%;
		top: 20px;
		overlay-x: hidden;
		overflow-y: auto;
		max-height: 200px;
	}
	.switch-part3{
		left: 200%;
		line-height: 30px;
		.switch-friends-link{
			margin-right: 9px;
			border-radius: 3px;
    		display: block;
			&:hover{
				background: #88acdb;
				color: #fff;
			}
		}
	}
	.switch-part4{
		left: 300%;
		text-align: left;
		line-height: 30px;
	}
}

